<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/mymidnightblue">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true">


        <ImageView
            android:id="@+id/Login_icon_logo"
            android:layout_width="208dp"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:src="@drawable/regist"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:orientation="vertical"
            android:id="@+id/linearLayout2">

            <TextView android:id="@+id/mbMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="0.07"
                android:gravity="center"
                android:shadowColor="#BB000000"
                android:shadowRadius="2.75"
                android:textSize="12sp"
                android:textColor="#FFFFFFFF" />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="80dp"
                android:background="@color/mylightslategray"
                android:orientation="horizontal" >


                <ImageView
                    android:id="@+id/Login_icon_phone"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/signin2" />

                    <EditText
                        android:id="@+id/EditText_Account"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="#ffff"
                        android:gravity="left|center_vertical"
                        android:hint="Email"
                        android:padding="12dp"
                        android:textColor="#000000" />
            </LinearLayout>


            <View
                android:layout_width="fill_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#D1D1CF" />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="0.25"
                android:background="#ffff"
                android:orientation="horizontal" >


                <ImageView
                    android:id="@+id/Login_icon_psd"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/denglukuangpassword" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView" />
                            <EditText
                                android:id="@+id/EditText_Password"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:background="#ffff"
                                android:inputType="textPassword"
                                android:gravity="left|center_vertical"
                                android:hint="Password"
                                android:padding="12dp"
                                android:textColor="#000000" />
            </LinearLayout>


            <Button
                android:id="@+id/btn_login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"
                android:background="@drawable/loginin"
                android:text="Sign in" />


            <Button
                android:id="@+id/btn_register"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/regist"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"
                android:text="Sign up" />



        </LinearLayout>

        <TextView
            android:id="@+id/Login_walk"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="21dp"
            android:gravity="right|bottom"
            android:background="@drawable/mannger"
            android:layout_below="@+id/linearLayout2"
            android:layout_toLeftOf="@+id/Login_forget_psd"
            android:layout_toStartOf="@+id/Login_forget_psd"
            android:layout_marginEnd="21dp"
            android:layout_marginTop="31dp" />

        <TextView
            android:id="@+id/Login_forget_psd"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="right|bottom"
            android:background="@drawable/forget"
            android:layout_alignBottom="@+id/Login_walk"
            android:layout_alignRight="@+id/Login_icon_logo"
            android:layout_alignEnd="@+id/Login_icon_logo"
            android:layout_marginRight="65dp"
            android:layout_marginEnd="65dp" />

    </RelativeLayout>


    </RelativeLayout>
</FrameLayout>

